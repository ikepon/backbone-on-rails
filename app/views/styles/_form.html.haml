= form_for @style do |f|
  - if @style.errors.any?
    #error_explanation
      %h2= "#{pluralize(@style.errors.count, "error")} prohibited this style from being saved:"
      %ul
        - @style.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :category
    = f.number_field :category
  .field
    = f.label :style
    = f.text_area :style
  .actions
    = f.submit 'Save'
